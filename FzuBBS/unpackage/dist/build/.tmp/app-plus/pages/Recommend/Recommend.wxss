/*轮播图的样式*/
.RecSchool{
	width: 100%;
	height: 400rpx;
}
/* 值得阅读标题 */
.WorthRead{
	margin-top: 20rpx;
	padding: 20rpx;
}
.WorthRead-title{
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-direction: row;
	    -ms-flex-direction: row;
	        flex-direction: row;
}
.WorthRead-icon{
	width: 45rpx;
	height: 45rpx;
	margin-top: 5rpx;
}
.WorthReadWord{
	font-size: 35rpx;
	margin-left: 35rpx;
	font-weight: bold;
}
/* 值得阅读正文 */
.RecommendRead{
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	    -ms-flex-direction: column;
	        flex-direction: column;
	/* 如果超出长度则省略 */
	/* white-space: nowrap;
	overflow: hidden;
	text-overflow: ellipsis; */
}
.single-recommend{
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	padding-bottom: 30rpx;
	padding-top: 30rpx;
	border-bottom: 1rpx solid #ebedf0;
}
.recommend-detail{
	width: 100%;
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	    -ms-flex-direction: column;
	        flex-direction: column;
	/* border: #007AFF 10upx; 边框未设置成功*/
}
.recommend-title{
	font-size: 45rpx;
	font-weight: bold;
}
.recommend-content{
	font-size: 35rpx;
	height: 100%;
	word-break: break-all;
}
.recommend-time{
	text-align: right;
}

